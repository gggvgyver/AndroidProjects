<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/lay_cards"
       android:layout_width="match_parent"
       android:layout_alignParentTop="true"
       android:orientation="horizontal"
       android:layout_height="wrap_content"
       tools:ignore="InvalidId">

       <ImageView
           android:id="@+id/iv_card1"
           android:layout_width="wrap_content"
           android:src="@drawable/blue_back"
           android:layout_weight="1"
           android:scaleType="centerInside"
           android:layout_height="wrap_content">
       </ImageView>

       <ImageView
           android:id="@+id/iv_card2"
           android:layout_width="wrap_content"
           android:src="@drawable/blue_back"
           android:layout_weight="1"
           android:scaleType="centerInside"
           android:layout_height="wrap_content">
       </ImageView>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_points"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId">

        <TextView
            android:id="@+id/tv_player1"
            android:layout_width="wrap_content"
            android:src="@drawable/blue_back"
            android:text="Player 1: 0"
            android:textSize="24sp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/b_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="InvalidId"></Button>

        <TextView
            android:id="@+id/tv_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/blue_back"
            android:text="Player 2: 0"
            android:textSize="24sp"
            android:textStyle="italic"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_war"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="WAR"
        android:textSize="72sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    </TextView>


</RelativeLayout>